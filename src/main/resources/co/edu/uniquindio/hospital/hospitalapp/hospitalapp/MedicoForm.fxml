<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #1A3C57;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.hospital.hospitalapp.hospitalapp.viewController.MedicoFormViewController">

    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Administrador-Formulario de Médico" textFill="WHITE" />

    <TextField fx:id="txtId" promptText="ID" />
    <TextField fx:id="txtNombre" promptText="Nombre" />
    <TextField fx:id="txtApellido" promptText="Apellido" />
    <TextField fx:id="txtConsultorio" promptText="Consultorio" />
    <TextField fx:id="txtEspecialidad" promptText="Especialidad" />
    <TextField fx:id="txtLicencia" promptText="Número de Licencia" />

    <Button onAction="#guardarMedico" style="-fx-background-radius: 15; -fx-background-color: #27ae60;" text="Guardar" textFill="WHITE">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Button>
</VBox>
