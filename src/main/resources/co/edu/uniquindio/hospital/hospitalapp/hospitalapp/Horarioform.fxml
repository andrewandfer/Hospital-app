      style="-fx-background-color: #1A3C57;" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Formulario Horario" style="-fx-font-size: 20px; -fx-text-fill: white;" />

    <TextField fx:id="txtDia" promptText="DÃ­a (ej: Lunes)" />
    <TextField fx:id="txtHoraInicio" promptText="Hora de Inicio (hh:mm)" />
